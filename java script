function calc(buttonValue) {
                if (buttonValue == 'C') {
                    document.getElementById('disp').value = '0';
                }

		

                else {
                    if(document.getElementById('disp').value == '0') {
                        document.getElementById('disp').value = buttonValue;
                    } 

	

			else {
                        document.getElementById('disp').value += buttonValue;
                    }
                }
            }
            
            function calculate(equation) {
		
	
                var answer = eval(equation);
                document.getElementById('disp').value = answer;
            }

